<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFFE9"
    tools:context=".view.Cuidar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#708F30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtNomePlanta"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Nome da planta"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="43dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="53dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:background="#708F30"
                app:srcCompat="@drawable/moedasdolar" />

            <TextView
                android:id="@+id/txtMoedas"
                android:layout_width="86dp"
                android:layout_height="57dp"
                android:gravity="center_vertical"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="147dp" />

        <ImageView
            android:id="@+id/imagemPlanta"
            android:layout_width="256dp"
            android:layout_height="212dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="31dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnRegar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/botaoarredondado"
                android:backgroundTint="#8FBF92"
                app:srcCompat="@drawable/regandoplantas" />

            <Space
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/btnLuz"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/botaoarredondado"
                android:backgroundTint="#C0C23F"
                app:srcCompat="@drawable/sol" />

            <Space
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/btnSombra"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/botaoarredondado"
                android:backgroundTint="#607353"
                app:srcCompat="@drawable/bolasombra" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnInfo"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/botaoarredondado"
                android:backgroundTint="#BA7F4C"
                app:srcCompat="@drawable/livros" />

            <Space
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/btnLoja"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/botaoarredondado"
                android:backgroundTint="#BAE767"
                app:srcCompat="@drawable/carrinhocompras" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="67dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="#708F30"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>