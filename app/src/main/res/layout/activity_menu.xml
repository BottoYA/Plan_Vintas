<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFFE9"
    android:backgroundTint="#FEFFE9"
    tools:context=".view.Menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FEFFE9"
        android:backgroundTint="#FEFFE9"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="#708F30"
            android:gravity="center_vertical"
            android:text="Bem vindo(a)!"
            android:textAlignment="center"
            android:textColor="#223423"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="19dp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="468dp"
            android:background="#FEFFE9"
            android:backgroundTint="#FEFFE9"
            android:padding="8dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="27dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnSair"
                android:layout_width="104dp"
                android:layout_height="match_parent"
                android:background="@drawable/botaoarredondado"
                android:backgroundTint="#223423"
                app:srcCompat="@drawable/enter" />

            <Space
                android:layout_width="79dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/btnCriar"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:background="@drawable/botaoarredondado"
                android:backgroundTint="#A5C23F"
                app:srcCompat="@drawable/growingseed" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="bottom"
            android:background="#708F30"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>